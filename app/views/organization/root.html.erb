<div>
    <h1>Log In</h1>

    <!-- Form to login and create a session -->

    <%= form_for(:session, url: login_path) do |f| %>
           
        <div>
            <%= f.label :email %>
            <%= f.text_field :email %>
        </div>
        <div>
            <%= f.label :password %>
            <%= f.password_field :password %>
        </div>
        <div>
            <%= f.submit 'Login' %>
        </div>

    <% end %>
        
</div>